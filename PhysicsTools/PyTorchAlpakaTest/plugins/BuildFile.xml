<library file="*.cc" name="PhysicsToolsPyTorchAlpakaTestPlugins">
  <use name="fmt"/>
  <use name="DataFormats/PortableTestObjects"/>
  <use name="FWCore/Framework"/>
  <use name="FWCore/MessageLogger"/>
  <use name="FWCore/ParameterSet"/>
  <use name="FWCore/Utilities"/>
  <flags EDM_PLUGIN="1"/>
</library>

<library file="alpaka/*.cc" name="PhysicsToolsPyTorchAlpakaTestPluginsPortable">
  <use name="alpaka"/>
  <use name="pytorch"/>
  <use name="pytorch-cuda" for="alpaka/cuda"/>
  <use name="DataFormats/PortableTestObjects"/>
  <use name="FWCore/MessageLogger"/>
  <use name="FWCore/ParameterSet"/>
  <use name="FWCore/Utilities"/>
  <use name="HeterogeneousCore/AlpakaCore"/>
  <use name="HeterogeneousCore/AlpakaInterface"/>
  <flags ALPAKA_BACKENDS="serial cuda"/>
  <flags EDM_PLUGIN="1"/>
 </library>